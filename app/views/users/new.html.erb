<h2>Sign Up</h2>
<form action="<%= users_url %>" method="post">
  <label>Username
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </label>

  <label>Email
    <input type="text" name="user[email]" value="<%= @user.email %>"
  </label>

  <label>Password
    <input type="password" name="user[password]" value="<%= @user.password %>"
  </label>

  <label>Confirm password
    <input type="password" name="user[password_confirmation]" value="<%= @user.password %>"
  </label>

  <label>Date of Birth (must be of legal drinking age in your home country)
    <input type="date" name="user[dob]" value="<%= @user.dob %>"
  </label>

  <input type="submit" value="Sign Up"></input>
</form>
